<article>
  <% if notice %>
    <aside id="notice"><%= notice %></aside>
  <% end %>

  <h2><%= t('.title') %></h2>
  <table>
    <%= render cart.line_items %>
    <tfoot>
    <tr>
      <th colspan="2">Total</th>
      <th class="price"><%= number_to_currency cart.total_price %></th>
    </tr>
    </tfoot>
  </table>

  <%= button_to t('.empty'),
                cart,
                method: :delete,
                data: { confirm: 'Are you sure?' } %>

  <%= button_to t('.checkout'),
                new_order_path,
                method: :get,
                class: "checkout" %>
</article>
